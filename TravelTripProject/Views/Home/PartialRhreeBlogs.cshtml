@using TravelTripProject.Models.Siniflar
@model List<Blog>
<div class="con-bot">
    @foreach (var item in Model)
    {
        
        <div class="right">

            <div class="bot-left">
                <img src="@item.BlogImage" alt="" />
            </div>
            <div class="left-text">
                <h4>@item.Title</h4>
                <span class="doller">@item.Date.ToString("dd:MM:yyyy")</span>
                <p>
                    @if (item.Description.Length > 100)
                    {
                        @item.Description.Substring(0, 100)
                    }
                    else
                    {
                        @item.Description
                    }
                </p>
                <p><a href="#"><span class="read">Read More >></span></a></p>
            </div>
        </div>
    }
</div>
